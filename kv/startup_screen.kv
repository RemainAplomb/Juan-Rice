#========== START UP SCREEN ==========#
# This screen serves as the initial screen of the application, providing options for 
# the user to either log in or sign up. The login button triggers a navigation to the 
# "login_screen" while the signup button triggers a navigation to the "signup_screen".
<StartUpScreen>:
	FloatLayout:
		canvas.before:
			Rectangle:
				pos: self.pos
				size: self.size
				source: "resources/backgrounds/startup_background.png"
		ImageButton:
			id: S_login_BTN
			source: "resources/buttons/login.png"
			#background_color: 84, 41, 34, 0
			allow_stretch: True
			keep_ratio: False
			size_hint : 0.5, 0.08
			pos_hint : { "x" : 0.265 , "y" : 0.19 }
			on_release:
				app.root.current = "login_screen"
		ImageButton:
			id: S_signup_BTN
			source: "resources/buttons/signup.png"
			#background_color: 0, 0, 0, 0
			allow_stretch: True
			keep_ratio: False
			size_hint : 0.5, 0.08
			pos_hint : { "x" : 0.265 , "y" : 0.09 }
			on_release:
				app.root.current = "signup_screen"