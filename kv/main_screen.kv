#   BRIEF DESCRIPTION OF THE PROGRAM:
#        This program demonstrates a login and signup system using Firebase for authentication. 
#        The POS class contains the backend methods for creating new user accounts and signing in existing users. 
#        The program initializes a Firebase app, gets a reference to the database, reads the data from the 'users'
#        node, and prints it to the console. It then signs up a new user and logs in an existing user, and 
#        calls the 'is_success' function to display a message indicating whether the login or signup was successful.

#===========================================================================================================#

#========== MAIN SCREEN SCREEN ==========#
<MainScreen>:
	FloatLayout:
		canvas.before:
			Rectangle:
				pos: self.pos
				size: self.size
				source: "resources/backgrounds/login_background.png"
		
		ImageButton:
			id: M_refill_BTN
			source: "resources/buttons/refill.png"
			#background_color: 0, 0, 0, 0
			size_hint : 0.5, 0.08
			pos_hint: { "x" : 0.265 , "y" : 0.64 }
			allow_stretch: True
			keep_ratio: False
			on_release:
				app.on_enter_refillHistoryScreen()

		ImageButton:
			id: M_sales_BTN
			source: "resources/buttons/sales.png"
			#background_color: 0, 0, 0, 0
			size_hint : 0.5, 0.08
			pos_hint: { "x" : 0.265 , "y" : 0.5 }
			allow_stretch: True
			keep_ratio: False
			on_release:
				app.on_enter_salesScreen()
		
		ImageButton:
			id: M_riceStatus_BTN
			source: "resources/buttons/status.png"
			#background_color: 0, 0, 0, 0
			size_hint : 0.5, 0.08
			pos_hint: { "x" : 0.265 , "y" : 0.36 }
			allow_stretch: True
			keep_ratio: False
			on_release:
				app.on_enter_riceStatusScreen("rice")
		
		ImageButton:
			id: M_notifications_BTN
			source: "resources/buttons/notifications.png"
			#background_color: 0, 0, 0, 0
			size_hint : 0.5, 0.08
			pos_hint: { "x" : 0.265 , "y" : 0.22 }
			allow_stretch: True
			keep_ratio: False
			on_release:
				app.on_enter_salesScreen()
		
		ImageButton:
			id: M_signOut_BTN
			source: "resources/buttons/signOut.png"
			#background_color: 0, 0, 0, 0
			size_hint : 0.5, 0.08
			pos_hint: { "x" : 0.265 , "y" : 0.08 }
			allow_stretch: True
			keep_ratio: False
			on_release:
				app.root.current = "startup_screen"
				root.manager.transition.direction = "right"