#   BRIEF DESCRIPTION OF THE PROGRAM:
#        This program demonstrates a login and signup system using Firebase for authentication. 
#        The POS class contains the backend methods for creating new user accounts and signing in existing users. 
#        The program initializes a Firebase app, gets a reference to the database, reads the data from the 'users'
#        node, and prints it to the console. It then signs up a new user and logs in an existing user, and 
#        calls the 'is_success' function to display a message indicating whether the login or signup was successful.

#===========================================================================================================#

#========== STATUS SCREEN ==========#

<VerticalBar>:
    canvas:
        Color:
            rgba: self.color
        Rectangle:
            pos: self.pos
            size: self.size[0], self.size[1] * self.value_normalized

<MiscStatusScreen>:
    FloatLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: "resources/backgrounds/login_background.png"
            
        
        BoxLayout:
            orientation: 'horizontal'
            spacing: app.font_scaling * 15
            padding: (app.font_scaling *20), self.height * 0.25, (app.font_scaling *20), (app.font_scaling *10)
            # Left, Top, Right, Bottom
            size_hint: 0.9, 0.56
            pos_hint: {"center_x": 0.5, "center_y": 0.485}
            canvas.after:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.x*1.35, self.center_y *1.375
                    size: self.width*0.95, app.font_scaling *2
            
            canvas:
                Color:
                    rgba: 0.33, 0.16, 0.13, 0.9
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20, 20, 0, 0]
            VerticalBar:
                id: MiscStatusScreen_bar_cups
                value: 100
                color: (1, 1, 1, 1)
            VerticalBar:
                id: MiscStatusScreen_bar_coin1
                value: 70
                color: (1, 1, 1, 1)
            VerticalBar:
                id: MiscStatusScreen_bar_coin2
                value: 30
                color: (1, 1, 1, 1)
        
        Label:
            id: MiscStatusScreen_miscStorageLabel
            text: "MISC STORAGE"
            font_size: app.font_scaling * 34
            font_name: "resources/fonts/impact/impact.ttf"
            size_hint: 0.35, 0.08
            pos_hint: {"x": 0.32, "y" : 0.673}
            color: (1, 1, 1, 1)
        
        Label:
            id: MiscStatusScreen_miscLabel_cups
            #text: "Cups"
            font_size: app.font_scaling * 18
            font_name: "resources/fonts/nunito/Nunito-Light.ttf"
            size_hint: 0.35, 0.08
            pos_hint: {"x": 0.05, "y" : 0.61}
            color: (1, 1, 1, 1)
        
        Label:
            id: MiscStatusScreen_miscLabel_coin1
            #text: "coin1"
            font_size: app.font_scaling * 18
            font_name: "resources/fonts/nunito/Nunito-Light.ttf"
            size_hint: 0.35, 0.08
            pos_hint: {"x": 0.32, "y" : 0.61}
            color: (1, 1, 1, 1)
        
        Label:
            id: MiscStatusScreen_miscLabel_coin2
            #text: "coin2"
            font_size: app.font_scaling * 18
            font_name: "resources/fonts/nunito/Nunito-Light.ttf"
            size_hint: 0.35, 0.08
            pos_hint: {"x": 0.60, "y" : 0.61}
            color: (1, 1, 1, 1)

        
        ImageButton:
            id: MiscStatusScreen_rice_BTN
            source: "resources/buttons/rice.png"
            size_hint: 0.5, 0.08
            pos_hint: {"x": 0.265, "y": 0.11}
            allow_stretch: True
            keep_ratio: False
            on_release:
                app.on_enter_riceStatusScreen()

        ImageButton:
            id: MiscStatusScreen_goBack_BTN
            source: "resources/buttons/goBack.png"
            size_hint: 0.5, 0.08
            pos_hint: {"x": 0.265, "y": 0.02}
            allow_stretch: True
            keep_ratio: False
            on_release:
                app.root.current = "main_screen"
                root.manager.transition.direction = "right"



